<launch>
    <include file="$(find-pkg-share realsense2_camera)/launch/rs_launch.py">
        <arg name="pointcloud.enable" value="true"/> 
        <arg name="align_depth.enable" value="true"/>
    </include> 

    <node pkg="apriltag_ros" exec="apriltag_node" output="screen">
        <remap from="image_rect" to="/camera/image" />
        <remap from="camera_info" to="/camera/camera_info" />
        <param name="use_sim_time" value="false"/>
        <param from="$(find-pkg-share apriltag_ros)/share/apriltag_ros/cfg/tags_36h11.yaml" />
    </node>

    <node pkg="rviz2" exec="rviz2" args="-d $(find-pkg-share apex_putter)/config/apriltag.rviz"/>
</launch>